<%= form_with model: @task do |f| %>
  <%= f.label :title, class: 'form-label' %>
  <%= f.text_field :title, value: @task.title, class: 'form-control' %>
  <%= f.label :details, class: 'form-label' %>
  <%= f.text_field :details, value: @task.details, class: 'form-control' %>
  <div class="d-flex justify-content-between mt-2">
    <%= f.label :completed, 'Tâche terminée', class: 'form-check-label' %>
    <%= f.check_box :completed, class: 'form-check-input' %>
  </div>
  <div class="text-center mt-3">
    <%= f.submit 'Update task', class: 'btn btn-primary' %>
  </div>
<% end %>
